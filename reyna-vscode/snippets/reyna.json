{
    "Function": {
        "prefix": "fn",
        "body": [
            "fn ${1:name}(${2:params}) -> ${3:void} {",
            "    $0",
            "}"
        ],
        "description": "Define a function"
    },
    "Class": {
        "prefix": "class",
        "body": [
            "class ${1:Name} {",
            "    fn init(${2:params}) {",
            "        $0",
            "    }",
            "}"
        ],
        "description": "Define a class"
    },
    "Class with Inheritance": {
        "prefix": "classext",
        "body": [
            "class ${1:Name} < ${2:Parent} {",
            "    fn init(${3:params}) {",
            "        super.init($4);",
            "        $0",
            "    }",
            "}"
        ],
        "description": "Define a class with inheritance"
    },
    "Struct": {
        "prefix": "struct",
        "body": [
            "struct ${1:Name} {",
            "    ${2:field}: ${3:type};",
            "    $0",
            "}"
        ],
        "description": "Define a struct"
    },
    "For Loop": {
        "prefix": "for",
        "body": [
            "for (let ${1:i}: int64 = ${2:0}; ${1:i} < ${3:n}; ${1:i} = ${1:i} + 1) {",
            "    $0",
            "}"
        ],
        "description": "For loop"
    },
    "While Loop": {
        "prefix": "while",
        "body": [
            "while (${1:condition}) {",
            "    $0",
            "}"
        ],
        "description": "While loop"
    },
    "If Statement": {
        "prefix": "if",
        "body": [
            "if (${1:condition}) {",
            "    $0",
            "}"
        ],
        "description": "If statement"
    },
    "If-Else": {
        "prefix": "ifelse",
        "body": [
            "if (${1:condition}) {",
            "    $2",
            "} else {",
            "    $0",
            "}"
        ],
        "description": "If-else statement"
    },
    "Let Variable": {
        "prefix": "let",
        "body": [
            "let ${1:name}: ${2:type} = ${3:value};"
        ],
        "description": "Declare a variable"
    },
    "Print": {
        "prefix": "print",
        "body": [
            "print ${1:value};"
        ],
        "description": "Print statement"
    },
    "Closure": {
        "prefix": "closure",
        "body": [
            "fn ${1:outer}(${2:params}) {",
            "    fn ${3:inner}(${4:params}) -> ${5:type} {",
            "        return $6;",
            "    }",
            "    return ${3:inner};",
            "}"
        ],
        "description": "Closure pattern"
    },
    "Try-Catch": {
        "prefix": "try",
        "body": [
            "try {",
            "    $1",
            "} catch (${2:e}) {",
            "    $0",
            "}"
        ],
        "description": "Try-catch block"
    },
    "Async Function": {
        "prefix": "async",
        "body": [
            "async fn ${1:name}(${2:params}) {",
            "    let ${3:result} = await ${4:promise};",
            "    $0",
            "}"
        ],
        "description": "Async function"
    }
}




